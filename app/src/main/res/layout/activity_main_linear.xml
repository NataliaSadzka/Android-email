<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/email"
            android:text="E-mail"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="110dp" android:importantForAutofill="no" tools:ignore="LabelFor"
            android:layout_marginStart="110dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/title"
            android:text="Temat"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="110dp" android:importantForAutofill="no" tools:ignore="LabelFor"
            android:layout_marginStart="110dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/msg"
            android:text="Treść wiadomości"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="110dp"
            android:layout_weight="0" android:importantForAutofill="no" tools:ignore="LabelFor"
            android:layout_marginStart="110dp"/>
    <Button
            android:text="Send"
            android:onClick="onClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/send"
            android:textColor="#191818"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="160dp"
            style="@style/Widget.AppCompat.Button.Colored" android:layout_marginStart="160dp"/>
</LinearLayout>